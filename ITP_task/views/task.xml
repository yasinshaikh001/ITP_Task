<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Top menu item -->
        <menuitem id="itp_contact_menu_root"
            name="ITP Task"
            web_icon="ITP_task,static/description/icon.png"
            active="True"
            sequence="9"/>
                
        <record id="view_contact_tree" model="ir.ui.view">
            <field name="name">contacts.tree</field>
            <field name="model">contacts</field>
            <field name="arch" type="xml">
              <tree string="Contact Tree">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="mobile"/>
              </tree>
            </field>
        </record>

        <record id="view_contact_form" model="ir.ui.view">
            <field name="name">contacts.form</field>
            <field name="model">contacts</field>
            <field name="arch" type="xml">
              <form string="Contact Form">
                <sheet>
                    <group>
                          <group>
                              <field name="name"/>
                          </group>
                          <group>
                              <field name="email" widget="email"/>
                              <field name="mobile"/>
                          </group>
                     </group>
                </sheet>
              </form>
            </field>
        </record>

        <record id="action_task_contact" model="ir.actions.act_window">
            <field name="name">Contacts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">contacts</field>
            <field name="view_id" ref="view_contact_tree"/>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create Contact List
              </p><p>
                task
              </p>
            </field>
        </record>
     
        <menuitem id="menu_task_contact"
                action="action_task_contact"
                parent="itp_contact_menu_root"
                sequence="1"/>

</odoo>
