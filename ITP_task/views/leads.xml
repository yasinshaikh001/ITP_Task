<?xml version="1.0" encoding="utf-8"?>
<odoo>
                        
        <record id="view_leads_tree" model="ir.ui.view">
            <field name="name">leads.tree</field>
            <field name="model">leads</field>
            <field name="arch" type="xml">
              <tree string="Leads Tree">
                <field name="name"/>
                <field name="email"/>
                <field name="mobile"/>
              </tree>
            </field>
        </record>

        <record id="view_leads_form" model="ir.ui.view">
            <field name="name">leads.form</field>
            <field name="model">leads</field>
            <field name="arch" type="xml">
              <form string="Leads Form">
                  <sheet>
                    <group>
                          <group>
                              <field name="name"/>
                          </group>
                          <group>
                              <field name="email" widget="email"/>
                              <field name="mobile"/>
                          </group>
                     </group>
                   </sheet>
              </form>
            </field>
        </record>

        <record id="action_leads" model="ir.actions.act_window">
            <field name="name">Leads</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">leads</field>
            <field name="view_id" ref="view_leads_tree"/>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create Leads List
              </p><p>
                task
              </p>
            </field>
        </record>
     
        <menuitem id="menu_leads"
                action="action_leads"
                parent="itp_contact_menu_root"
                sequence="2"/>

</odoo>
